.reactions
    .donut-chart
        position: relative
    .slick-prev, .slick-next
        width: 29px
        height: 29px
        &:hover
            opacity: .5
    .slick-prev
        left: 50%
        margin-left:-150px
        background: url('/img/left.png') no-repeat    
    .slick-next
        right: 50%
        margin-right:-150px
        background: url('/img/right.png') no-repeat
    .slick-slide
        border: 1px solid LawnGreen