.reactions
    .donut-chart
        position: relative
    .slider
        margin-top: -12px
    .slick-prev, .slick-next
        width: 29px
        height: 29px
        &:hover
            opacity: .5
    .slick-prev
        left: 50%
        margin-left:-150px
        background: url('/img/left.png') no-repeat    
    .slick-next
        right: 50%
        margin-right:-150px
        background: url('/img/right.png') no-repeat
    .slick-slide
        div
            transition: border .75s ease,
                        height .75s ease,
                        margin-top .75s ease;
            background: white
            position: relative
            border: 1px solid Gray
            border-right: 0px
            padding: 15px
            min-width: 100%
            height: 70px
            margin-top:15px
    .slick-center + .slick-active
        div
            border-left-width:0
    .slick-center
        div
            height: 100px
            border:2px solid LawnGreen
            margin-top: 0
            &:before, &:after
                content: ''
                position: absolute
                width: 0
                height: 0
                border-style: solid
                border-color: transparent
                border-top: 0
            &:before 
                top: -16px
                left: 50%
                border-width: 16px
                margin-left: -12px
            &:after
                top: -12px
                left: 50%
                border-bottom-color: #fff
                border-width: 12px
                margin-left: -8px
        for color, i in $chartColors
            .c{i}
                border-color: color
                &:before
                    border-bottom-color: color 
    .slick-track
        padding-top:15px