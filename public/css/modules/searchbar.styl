.search-bar
	position relative

	input
		display block
		width 100%
		height 40px
		background none
		border none
		border-bottom 1px solid white
		color white
		font-size 1.5rem
		outline none

	.loader
		display none

	&.loading
		.loader
			display block
			position absolute
			top 45px
			left 0			

